{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OmniCore Meter Suite",
  "version": "0.1.0",
  "identifier": "com.omnicore.meter-suite",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "OmniCore Meter Suite",
        "width": 1400,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true,
        "fullscreen": false,
        "maximized": true,
        "center": true,
        "decorations": true,
        "transparent": false,
        "useHttpsScheme": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "OmniCore Systems",
    "category": "Utility",
    "shortDescription": "Electricity meter reading and programming tool",
    "longDescription": "Desktop application for reading and programming Turkish MASS-compliant electricity meters using IEC 62056-21 protocol."
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEJGMDNDRkYwQzhDOTRCNjAKUldSZ1M4bkk4TThEdithRkFXSURNejRtejMzWUNGQmtYTVV0R1dwcDgxUWU1NGV0Z1BiTFVNbG0K",
      "endpoints": [
        "https://github.com/OmniCoreST/omnicore-meter-suite/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
